<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:chd.Poomsae.Scoring.App"
             xmlns:ui="clr-namespace:chd.Poomsae.Scoring.UI.Components;assembly=chd.Poomsae.Scoring.UI"
             x:Class="chd.Poomsae.Scoring.App.MainPage"
             BackgroundColor="{DynamicResource CHDWhite}">

    <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type ui:Routes}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

</ContentPage>
