@using chd.UI.Base.Contracts.Enum

<div class="nav-menu">
    <NavMenuBase Visible="this.Visible">
        <MenuContent>
            <NavItem href="" Match="NavLinkMatch.All" IconFAClass="people" Title="" />
            <NavItem href="results" Match="NavLinkMatch.All" IconFAClass="ranking-star" Title="" />
        </MenuContent>
        <BottomContent>
            <NavItem href="settings" Match="NavLinkMatch.All" IconFAClass="gears" Title="" />
        </BottomContent>
    </NavMenuBase>
</div>

@code {
    [Inject] private INavigationHandler _navigationHandler { get; set; }

    [Parameter] public bool Visible { get; set; } = true;

    private void GoHome()
    {
        this._navigationHandler.NavigateToRoot();
    }
}