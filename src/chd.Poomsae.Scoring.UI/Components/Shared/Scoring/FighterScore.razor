@using chd.Poomsae.Scoring.Contracts.Dtos
@using chd.Poomsae.Scoring.UI.Extensions
<div class="fighter @this.__css">
    <div class="fighter-scores">
        <div class="action-button">
            @ButtonContent
        </div>
        <div class="fighter-score part-score presentation">
            <div class="part-score-title">@TextConstants.Presentation</div>
            <div class="part-score-value">@this.Score.Presentation.ToDisplayString()</div>
        </div>
        <div class="fighter-score part-score accuracy">
            <div class="part-score-title">@TextConstants.Accuracy</div>
            <div class="part-score-value">@this.Score.Accuracy.ToDisplayString()</div>
        </div>
        <div class="fighter-score total">@this.Score.Total.ToDisplayString()</div>
    </div>
</div>
@code {
    [Parameter] public ScoreDto Score { get; set; }
    [Parameter] public EScoringButtonColor Color { get; set; }
    [Parameter] public RenderFragment? ButtonContent { get; set; }

    private string __css => this.Color is EScoringButtonColor.None ? "fighter-neutral" : this.Color is EScoringButtonColor.Red ? "fighter-hong" : "fighter-chong";
}